---
export interface Props {
  ranking: number;
  name: string;
  stars: number;
  score: number;
}

const { ranking, name, stars, score } = Astro.props;
---

<li class="card">
  <h2 class="header">
    #{ranking}
    {name}
  </h2>
  <div class="score">
    {score} points
  </div>
  <div class="stars">{stars} stars</div>
</li>
<style>
  .card {
    list-style: none;
    display: grid;
    padding: 0.5rem;
    gap: 0.5rem;
    background-color: white;
    border-radius: 0.5rem;
    border: 1px solid rgba(var(--accent), 25%);
    grid-template-areas: "header header" "score stars";
  }
  h2 {
    grid-area: header;
    margin: 0;
    font-size: 1.25rem;
  }
  .score {
    grid-area: score;
  }
  .stars {
    grid-area: stars;
    text-align: right;
  }
  .card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
